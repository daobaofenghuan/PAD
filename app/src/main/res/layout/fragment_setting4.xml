<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <RelativeLayout
                android:id="@+id/sbxs"
                android:layout_width="0dp"
                android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/set_sbxs"
                android:layout_weight="2">


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ggsz"
                android:layout_width="0dp"
                android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/set_gg"
                android:layout_weight="2">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cjsz"
                android:layout_width="0dp"
                android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/set_cjz"
                android:layout_weight="2">


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sbxz"
                android:layout_width="0dp"
                android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/set_sbxz"
                android:layout_weight="2">


            </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">



        <RelativeLayout
            android:id="@+id/rjsj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/set_sj"
            android:layout_weight="2">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_margin="15dp"
            android:layout_height="match_parent"

            android:layout_weight="2">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_margin="15dp"
            android:layout_height="match_parent"

            android:layout_weight="2">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="2">


        </RelativeLayout>
    </LinearLayout>





</LinearLayout>